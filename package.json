{
	"name": "ralph-town-monorepo",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"workspaces": ["packages/*"],
	"scripts": {
		"build": "bun run --filter '*' build",
		"dev": "bun run --filter ralph-town dev",
		"typecheck": "bun run --filter '*' typecheck",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "bun run build && changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@types/bun": "^1.3.6",
		"prettier": "^3.8.1",
		"typescript": "^5.9.3"
	}
}
