{
	"$schema": "./ralph.schema.json",
	"repository": {
		"url": "https://github.com/user/repo.git",
		"branch": "main"
	},
	"git": {
		"feature_branch": "feature/my-feature",
		"commit_author": "Ralph Agent",
		"commit_email": "ralph@example.com",
		"create_pr": true
	},
	"execution": {
		"mode": "sequential",
		"runtime": "daytona",
		"model": "haiku"
	},
	"acceptance_criteria": [
		{
			"id": "ac-001",
			"description": "Add health check endpoint",
			"steps": [
				"Create src/routes/api/health/+server.ts",
				"Return JSON { status: 'ok' }",
				"Run pnpm run build to verify"
			],
			"backpressure": "pnpm run build",
			"passes": false
		}
	],
	"max_iterations_per_criterion": 3,
	"budget": {
		"max_tokens": 50000
	}
}
